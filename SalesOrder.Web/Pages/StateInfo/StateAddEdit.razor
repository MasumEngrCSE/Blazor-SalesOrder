<div>
    <h3 class="mb-5">@(stateId > 0 ? "State Update" : "State Add")</h3>
</div>


<div>

    <button type="button" onclick="@closePage" class="btn btn-primary" style="width:fit-content;text-align:right">
        Close
    </button>

    <button type="button" onclick="@SateAddEdit" class="btn btn-primary" style="width:fit-content;text-align:right">
        @(stateId > 0 ? "Update" : "Add State")
    </button>

</div>

<div>

    <EditForm Model="@stateInfoModel" OnValidSubmit="@ValidSubmit">
        <DataAnnotationsValidator />
        <fieldset>
            <div class="row mb-2">
                <label class="col-2" for="name">Name:</label>
                <InputText class="form-control col-6" @bind-Value="@stateInfoModel.Name" />
            </div>

            <div class="row mb-2">
                <label class="col-2" for="name">Description:</label>
                <InputText class="form-control col-6" @bind-Value="@stateInfoModel.Description" />
            </div>

        </fieldset>

    </EditForm>

</div>




